<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="rltsquare_config" translate="label" sortOrder="10">
            <label>RLTSquare</label>
        </tab>
        <section id="todo_instructions" translate="label" type="text" sortOrder="20" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>ToDo Instructions</label>
            <tab>rltsquare_config</tab>
<!--        <section id="checkout">-->
            <resource>RLTSquare_ToDoInstructions::todo_instructions</resource>
            <group id="todo_instructions" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>ToDo Instructions</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="allowed_customer_groups" translate="label" type="multiselect" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Select Allowed Specific Customer Groups</label>
                    <source_model>RLTSquare\ToDoInstructions\Model\Adminhtml\System\Config\Source\Customer\Group</source_model>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
